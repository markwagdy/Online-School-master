@model IEnumerable<OnlineSchool.Models.Church>

@{
    ViewBag.Title = "Churches";
}

<h2 class="text-center">List of Churches</h2>

<p>
    @Html.ActionLink("Add new Church", "New", "Church", new { @class = "btn btn-warning" })

</p>

@if (Model.Count() == 0)
{
    <p class="text-danger">We don't currently have any churches yet</p>
}

        <table class="table table-bordered table-hover">
            <thead class="thead-light text-center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber2)
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr class="text-truncate text-center">

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber2)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Church", new { id = item.Id }, new { @class = "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Church", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
