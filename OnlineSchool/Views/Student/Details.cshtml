    <hr />



    @if (Model.IsDeacon)
    {
        <h3 class="text-center">Deaconship History</h3>
        <table class="table table-bordered table-hover">
            <thead class="thead-dark bg-secondary text-center">
                <tr>
                    <td class="font-weight-bold">
                        El Rotba
                    </td>
                    <td class="font-weight-bold">

                        Tare5 el Reshama
                    </td>
                    <td class="font-weight-bold">

                        Makan el Reshama
                    </td>
                    <td class="font-weight-bold">

                        El Esm fi el Reshama
                    </td>
                    <td class="font-weight-bold">

                        El Oskof
                    </td>

                    <td>
                        @Html.ActionLink("Add More Records (Soon)", "", "Student", new { id = Model.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            </thead>


            @foreach (var history in Model.DeaconshipHistories)
            {
                <tr class="text-truncate text-center">
                    <td>
                        @Html.DisplayFor(modelItem => history.Rank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => history.AssignTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => history.AssignPlace)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => history.AssignName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => history.Bishop)
                    </td>
                    <td></td>
                </tr>



            }
        </table>
        <br />
        <hr />
    }
    else if(Model.Gender == "Male")
    {
        <P class="float-right">
            @Html.ActionLink("Became Deacon? (Soon)", "Index", "Student", new { @class = "btn btn-primary" })

        </P>

    }



    <p>
        @Html.ActionLink("Back to List", "Index", "Student", new { @class = "btn btn-dark" }) ||
        @Html.ActionLink("Edit Student", "Edit", "Student", new { id = Model.Id }, new { @class = "btn btn-success" })
    </p>
    <p>
        @Html.ActionLink("Print (Soon)", "Print", "Student", new { @class = "btn btn-light" })

    </p>

