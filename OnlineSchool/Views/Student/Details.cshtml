@model OnlineSchool.Models.Student

@using OnlineSchool.Models



@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

    <h4>Student Details</h4>
    @if (Model.StudentCard == null)
    {
    <div class="float-right">
        <img class="border border-2 border-info rounded mt-3" height="236" width="360"
             src="~/Content/NoCard.png" style="border-width: 0px;" />
    </div>
    }
    else
    {
        <div class="float-right">
            <img class="border border-2 border-info rounded mt-3" height="236" width="360"
                 src="~/Images/@Model.StudentCard.ImagePath" style="border-width: 0px;" />
        </div>

    }
    <hr />
    <div class="form-row">
        <dl class="dl-horizontal mx-auto flex-column">


