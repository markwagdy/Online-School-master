@model IEnumerable<OnlineSchool.Models.Servant>

@{
    ViewBag.Title = "Servants";
}

<h2 class="text-dark text-center">List of Servants</h2>

<p class="float-right">
    @Html.ActionLink("Add new servant", "New", "Servant", new { @class = "btn btn-warning" })
</p>
@if (Model.Count() == 0)
{
    <p class="text-danger">We don't currently have any servants yet</p>
}
<table class="table table-bordered table-hover">
    <thead class="thead-light text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.Name)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Servant", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", "Servant", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }

</table>
